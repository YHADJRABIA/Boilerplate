    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "sass": "^1.80.0",
    "to-ico": "^1.1.5",
    "typescript": "^5",
    "typescript-eslint": "^8.46.2"
  }
